{
	"name": "merchant-buddy",
	"version": "1.0.1",
	"description": "Merchant Buddy is a WooCommerce plugin that allows you to search for products, orders, and customers in the WordPress admin dashboard.",
	"author": "Seghir Nadir",
	"license": "GPL-2.0-or-later",
	"main": "src/index.js",
	"scripts": {
		"build": "wp-scripts build src/index.js src/settings.js",
		"start": "wp-scripts start src/index.js src/settings.js",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"preplugin-zip": "composer install --no-dev",
		"plugin-zip": "wp-scripts plugin-zip",
		"pack": "npm run plugin-zip",
		"test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
		"test:unit": "composer test",
		"env:start": "wp-env start",
		"env:stop": "wp-env stop"
	},
	"files": [
		"build",
		"includes",
		"public",
		"vendor",
		"merchant-buddy.php",
		"readme.txt",
		"LICENSE",
		"composer.json"
	],
	"dependencies": {
		"@algolia/client-search": "^5.10.2",
		"@dnd-kit/core": "^6.1.0",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@emotion/styled": "^11.13.0",
		"@tanstack/react-query": "^5.59.13",
		"@woocommerce/settings": "^1.0.0",
		"@wordpress/api-fetch": "^7.9.0",
		"@wordpress/components": "^29.4.0",
		"@wordpress/date": "^5.10.0",
		"@wordpress/element": "^6.9.0",
		"@wordpress/i18n": "^5.9.0",
		"@wordpress/icons": "^10.11.0",
		"@wordpress/scripts": "^30.11.0",
		"@wordpress/url": "^4.9.0",
		"algoliasearch": "^5.20.3",
		"change-case": "^5.4.4",
		"cmdk": "^1.0.0",
		"fast-deep-equal": "^3.1.3",
